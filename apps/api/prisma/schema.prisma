generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  VIEWER
  EDITOR
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String?
  googleId    String?   @unique
  name        String?
  picture     String?
  accessToken String?
  role        Role      @default(USER)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sessions    Session[]
  passkeys    Passkey[]
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionToken String   @unique
  deviceName   String?
  deviceType   String?
  userAgent    String?
  ipAddress    String?
  lastActivity DateTime @default(now())
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  @@index([userId])
  @@index([sessionToken])
}

model Passkey {
  id           String    @id @default(uuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialId String    @unique
  publicKey    String
  counter      BigInt    @default(0)
  deviceName   String?
  createdAt    DateTime  @default(now())
  lastUsedAt   DateTime?

  @@index([userId])
  @@index([credentialId])
}
